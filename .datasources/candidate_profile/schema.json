
{
  "name": "candidate_profile",
  "title": "求职者档案",
  "schemas": [
    {
      "name": "userId",
      "title": "用户ID",
      "type": "String"
    },
    {
      "name": "fullName",
      "title": "姓名",
      "type": "String"
    },
    {
      "name": "avatarUrl",
      "title": "头像URL",
      "type": "Image"
    },
    {
      "name": "resumeUrl",
      "title": "简历文件",
      "type": "Array",
      "items": {
        "type": "File"
      }
    },
    {
      "name": "videoIntroUrl",
      "title": "视频介绍",
      "type": "Media",
      "format": "x-video"
    },
    {
      "name": "skills",
      "title": "技能标签",
      "type": "Array",
      "items": {
        "type": "String"
      }
    },
    {
      "name": "experienceYears",
      "title": "工作经验年数",
      "type": "Number"
    },
    {
      "name": "preferredSalary",
      "title": "期望薪资",
      "type": "String"
    },
    {
      "name": "location",
      "title": "工作地点",
      "type": "String"
    },
    {
      "name": "languages",
      "title": "掌握语言",
      "type": "Array",
      "items": {
        "type": "String"
      }
    }
  ]
